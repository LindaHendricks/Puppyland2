<h1></h1>
<h2 style ="text-align: center;">Add a Review:</h2>

<% if @errors %>
Errors: <%@errors.each do |error| %>
        <p><li><%= error%></p>  
    <% end %>
<% end %>

<%= form_for @review do |f| %>
<%= f.label :comment %><br>
<%= f.text_field :comment %><br>
<%= f.label :rating %><br>
<%= f.number_field :rating, min: 1, max: 5%><br>
<%=f.label :date %><br>
<%=f.date_select :date %><br>
<%= f.label :pet_id %><br>
<%= f.collection_select :pet_id, @pets, :id, :name %><br>
<%=f.hidden_field :renter_id, :value => @current_renter %>
<%= f.submit('create review', :class => "style_submit")%>
<% end %>





