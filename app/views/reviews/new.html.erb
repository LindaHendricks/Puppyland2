<h1>Add a review </h1>

<%= form_for @review do |f| %>

<%= f.label :comment %>
<%= f.text_field :comment %>

<%= f.label :rating %>
<%= f.number_field :rating %>

<%= f.label :date %>
<%= f.text_field :date %>

<%= f.label :pet_id %>
<%= f.collection_select :pet_id, @pets, :id, :name %>

<%= f.label :renter_id %>
<%= f.collection_select :renter_id, @renters, :id, :name %>


<%= f.submit %>

<% end %>