<h1>Add a review </h1>

<%= form_for @review do |f| %>
<%= f.label :comment %><br>
<%= f.text_field :comment %><br>
<%= f.label :rating %><br>
<%= f.number_field :rating %><br>
<%= f.label :date %><br>
<%= f.text_field :date %><br>
<%= f.label :pet_id %><br>
<%= f.collection_select :pet_id, @pets, :id, :name %><br>
<%=f.hidden_field :renter_id, :value => @current_renter %>
<%= f.submit %>
<% end %>




